@using Microsoft.AspNetCore.Identity
@using Yooshina.CMSCore.Model

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User)) {
    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="form-inline">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-outline-danger my-2 my-sm-0">Log off</button>
            </li>
        </ul>
    </form>
} else {
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item "><a asp-controller="Account" asp-action="Register" class="nav-link">Register</a></li>
        <li class="nav-item"><a asp-controller="Account" asp-action="Login" class="nav-link">Log in</a></li>
    </ul>
}
